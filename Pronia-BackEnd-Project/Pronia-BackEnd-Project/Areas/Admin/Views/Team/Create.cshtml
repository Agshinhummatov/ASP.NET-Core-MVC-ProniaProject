@model TeamCreateVM


@{
    ViewData["Title"] = "Create";
}


<div class="container my-5">

    <h2 style="color:darkcyan; text-align:center;" class="mt-3">Create</h2>

    <form class="form-sample" asp-action="Create" method="post" enctype="multipart/form-data">
     

        <div class="form-group">
            <label style="color:darkred" class="mt-2">Name </label>
            <input class="form-control" id="customFile" asp-for="Name" placeholder="Name" />   
            <span class="text-danger" asp-validation-for="Name"></span>

        </div>

        <div class="form-group">
            <label style="color:darkred" class="mt-2">Name </label>
            <input class="form-control" id="customFile" asp-for="Position" placeholder="Position" />
            <span class="text-danger" asp-validation-for="Position"></span>
        </div>

        <div class="form-group">

            <label style="color:darkred" class="mt-2">Image </label>
            <input class="form-control" id="customFile" asp-for="Photo" />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>

        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />

}
