@model IEnumerable<Team>


@{
    ViewData["Title"] = "Index";
   
}



<div class="container my-5">
    <a class="btn btn-success" style="float: right;" asp-action="Create">Create</a>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>


                    <th>
                        Name
                    </th>

                    <th>
                        Operations

                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var team in Model)
                {
                    <tr>
                        <td>
                            <img src="~/assets/images/website-images/@team.Image" style="width:80px; height:80px;" alt="image" />
                        </td>

                        <td>
                            
                            @team.Name

                        </td>

                        <td>

                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@team.Id">Info</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@team.Id">Edit</a>
                            <form style="display: inline-block;" asp-action="Delete" asp-route-id="@team.Id" method="post">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>

                        </td>

                    </tr>
                }


            </tbody>
        </table>
    </div>

</div>
