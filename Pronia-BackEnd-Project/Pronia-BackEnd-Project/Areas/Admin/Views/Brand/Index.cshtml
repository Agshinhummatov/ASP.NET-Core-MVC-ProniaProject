@model IEnumerable<Brand>

@{
    ViewData["Title"] = "Brand";
}


<div class="container my-5">
    <a class="btn btn-success" style="float: right;" asp-action="Create">Create</a>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>

                    <th>
                        Operations

                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var brand in Model)
                {
                    <tr>
                        <td>
                            <img src="~/assets/images/website-images//@brand.Image" style="width:80px; height:80px;" alt="image" />
                        </td>

                      
                        <td>

                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@brand.Id">Info</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@brand.Id">Edit</a>
                            <form style="display: inline-block;" asp-action="Delete" asp-route-id="@brand.Id" method="post">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>

                        </td>

                    </tr>
                }


            </tbody>
        </table>
    </div>

</div>
