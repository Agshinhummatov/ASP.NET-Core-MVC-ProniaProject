@model BlogCreateVM


@{
    ViewData["Title"] = "Create";
}


<div class="container my-5">

    <h2 style="color:darkcyan; text-align:center;" class="mt-3">Create</h2>

    <form class="form-sample" asp-action="Create" method="post" enctype="multipart/form-data">
        @*enctype="multipart/form-data bunu mutleq yaziriq upload edende  string kimi deyil file kimi gonderisin methodumuza "*@

        <div class="form-group">
            <label style="color:darkred" class="mt-2">Name </label>
            <input class="form-control" id="customFile" asp-for="Title" placeholder="Name" />   @*Bu asp-for="Name"  Category nin ichinde olan name propertisidi ve eger inputlarim coxdusa deyisecek onlar *@
            <span class="text-danger" asp-validation-for="Title"></span>

        </div>


        <div class="form-group">

            <label style="color:darkred" class="mt-2">Description </label>
            <textarea class="form-control" id="blog-text" asp-for="Description" rows="5"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>


     

        <div class="form-group">
            <label style="color:darkred" class="mt-5">Author</label>
            <select class="form-control" id="customFile" asp-for="AuthorId" asp-items="@ViewBag.author"></select>

            @* asp-for="CategoryId" bu ise bize catgeryy idni veriri yeni selecte click endende // asp-items="@ViewBag.categories" budurki bize textinde Nameini siralayir men gelirem hemin texte vuranda id sini gonderir sohbet burdan gedir colden view bag ile gonderdiknew SelectList(categories, "Id", "Name");  *@

        </div>



        <div class="form-group">

            <label style="color:darkred" class="mt-2">Image </label>
            <input class="form-control" id="customFile" asp-for="Photos" />
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>


        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts{


    <partial name="_ValidationScriptsPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("blog-text")  //checkeditor qosanda mutleq bildirmeliyem burdaki getsin yuxardaki areani deyiij


    </script>

}


