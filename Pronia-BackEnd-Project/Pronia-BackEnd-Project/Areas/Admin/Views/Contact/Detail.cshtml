@model ContactDetailVM

@{
    ViewData["Title"] = "Detail";
}





<div class="container my-5">

    <h2 style="color:darkcyan; text-align:center;" class="mt-3"> Contact detail</h2>

    

    <div class="form-group">
        <label style="color:darkred" class="mt-2">Name </label>
        <input class="form-control" id="customFile" asp-for="FirstName" disabled />
    </div>


    <div class="form-group">

        <label style="color:darkred" class="mt-2">Description </label>
        <input class="form-control" id="customFile" asp-for="LastName" disabled />

    </div>

    <div class="form-group">

        <label style="color:darkred" class="mt-2">Description </label>
        <input class="form-control" id="customFile" asp-for="Email" disabled />

    </div>


    <div class="form-group">

        <label style="color:darkred" class="mt-2">Description </label>
        <input class="form-control" id="customFile" asp-for="Phone" disabled />

    </div>



    <div class="form-group">

        <label style="color:darkred" class="mt-2">Description </label>
        <input class="form-control" id="customFile" asp-for="Message" disabled />

    </div>



    <div class="form-group">

        <div class="buttons my-3">

            <a class="btn btn-info mt-5" asp-action="Index">Back</a>

        </div>
    </div>


</div>