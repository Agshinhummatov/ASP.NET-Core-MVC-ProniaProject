@model ClientEditVM


@{
    ViewData["Title"] = "Create";
}



<div class="container my-5">

    <h2 style="color:darkcyan; text-align:center;" class="mt-3"> Client Edit</h2>

    <div class="my-3 ">

        <img src="~/assets/images/website-images/@Model.Image" style="width:150px; height:150px" alt="Alternate Text" />

    </div>



    <form class="form-sample" asp-action="Edit" method="post" enctype="multipart/form-data">




        <div class="form-group">
            <label style="color:darkred" class="mt-2">Name</label>
            <input class="form-control" id="customFile" asp-for="Name" placeholder="Offer" />
            <span class="text-danger" asp-validation-for="Name"></span>

        </div>


        <div class="form-group">
            <label style="color:darkred" class="mt-2">Description </label>
            <input class="form-control" id="customFile" asp-for="Description" placeholder="Description" />
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>


      


        <div class="form-group">
            <label style="color:darkred" class="mt-2">Photo </label>
            <input class="form-control" id="customFile" asp-for="Photo" />

        </div>



        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>


@section Scripts{


    <partial name="_ValidationScriptsPartial" />



}