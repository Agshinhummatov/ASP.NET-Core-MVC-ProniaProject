@model ClientDetailVM

@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>



<div class="container my-5">

    <h2 style="color:darkcyan; text-align:center;" class="mt-3"> Client detail</h2>

    <div class="form-group">

        <img src="~/assets/images/website-images/@Model.Image" style="width:150px; height:150px;" />
     

    </div>

    <div class="form-group">
        <label style="color:darkred" class="mt-2">Name </label>
        <input class="form-control" id="customFile" asp-for="Name" disabled />
    </div>





    <div class="form-group">
        <label style="color:darkred" class="mt-5">Description</label>
        <input class="form-control" id="customFile" asp-for="Description" disabled />
    </div>


   

    <div class="form-group">

        <div class="buttons my-3">

            <a class="btn btn-info mt-5" asp-action="Index">Back</a>

        </div>
    </div>


</div>