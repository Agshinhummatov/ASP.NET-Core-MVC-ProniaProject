@model SliderDetailVM

@{
    ViewData["Title"] = "Detail";
}

<h1>Details</h1>



<div class="container my-5">

    <h2 style="color:darkcyan; text-align:center;" class="mt-3"> Blog detail</h2>

    <div class="form-group">
        
            <img src="~/assets/images/website-images/@Model.Image" style="width:150px; height:150px;" />
        <img src="~/assets/images/website-images/@Model.BackGroundImage" style="width:150px; height:150px;" />


    </div>

    <div class="form-group">
        <label style="color:darkred" class="mt-2">Title </label>
        <input class="form-control" id="customFile" asp-for="Title" disabled />
    </div>


    


    <div class="form-group">
        <label style="color:darkred" class="mt-5">Description</label>
        <input class="form-control" id="customFile" asp-for="Description" disabled />
    </div>


    <div class="form-group">
        <label style="color:darkred" class="mt-5">Author</label>
        <input class="form-control" id="customFile" asp-for="Offer" disabled />
    </div>

    <div class="form-group">

        <div class="buttons my-3">

            <a class="btn btn-info mt-5" asp-action="Index">Back</a>

        </div>
    </div>


</div>


